    <div class="row mt-3">
<div class="col-8 offset-3 ">
 <h3>listings details</h3>
</div>

        <div class="col-6 offset-3 show-card">
<div class="card" >
  <img src="<%= listening.image %>" class="card-img-top show-img " alt="...">
