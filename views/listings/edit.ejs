<% layout("/layouts/boilerplate.ejs") %>
<body>

 
 <br>
 <div class="row">
  <div class="col-8 offset-2">
    
 <h1>Edit your listing</h1>
 <br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" class="form-control" id="title"
          value="<%=listing.title%>" 
          required/>
                <div class="valid-feedback"> title looks good</div>
          
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" id="description"  required><%=listing.description%> </textarea>
         <div class="invalid-feedback">  please Enter short Description </div>
      </div>


      <div class="mb-3"  >
    Original Listing Image <br />
    <img  style="width: 250px; height: 250px;"     src=<%=originalImageUrl %>  />
</div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload new Image </label>
        <input name="listing[image]" type="file" class="form-control" id="image" />
          
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" type="number" class="form-control" id="price"
            value="<%=listing.price%>"  required/>
                  <div class="invalid-feedback"> Enter Valid Pricek</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" type="text" class="form-control" id="country"
            value="<%=listing.country%>" required />
                  <div class="invalid-feedback"> Enter Valid Country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" type="text" class="form-control" id="location"
          value="<%=listing.location%>"  required/>
                <div class="invalid-feedback"> Enter Valid Location</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>
<br><br>

</body>
