<!-- Scripts -->
<script>
  // tax toggle
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
          info.style.display = info.style.display !== "inline" ? "inline" : "none";
      }
  });

  // category filtering
  const filters = document.querySelectorAll(".filter");
  const listings = document.querySelectorAll(".listing-card-wrapper");

  filters.forEach(filter => {
    filter.addEventListener("click", () => {
      // remove active from all
      filters.forEach(f => f.classList.remove("active"));
      filter.classList.add("active");

      const category = filter.dataset.category;

      listings.forEach(listing => {
        if (category === "all" || listing.dataset.category === category) {
          listing.style.display = "block";
        } else {
          listing.style.display = "none";
        }
      });
    });
  });
</script>



<!-- for searching -->
<script>
const searchInput = document.getElementById("liveSearchInput");
const searchBtn = document.getElementById("liveSearchBtn");
const listingContainer = document.getElementById("listing-container");

async function performSearch() {
  const query = searchInput.value.trim();
  const res = await fetch(`/listings/search?query=${encodeURIComponent(query)}`);
  const listings = await res.json();

  listingContainer.innerHTML = "";

  if (!listings.length) {
    listingContainer.innerHTML = `
      <div class="col-12 text-center mt-5">
        <h4>No listings found for "<b>${query}</b>" üò¢</h4>
      </div>`;
    return;
  }

  listings.forEach(listing => {
    const html = `
      <a href="/listings/${listing._id}" class="listing-links col listing-card-wrapper" data-category="${listing.category}">
        <div class="card h-100 listing-card">
          <img src="${listing.image?.url || 'https://via.placeholder.com/300'}" class="card-img-top" alt="listing_image" style="height: 20rem;" />
          <div class="card-body">
            <p class="card-text">
              <b>${listing.title}</b><br />
              ‚Çπ ${listing.price?.toLocaleString("en-IN") || 'N/A'} / night
            </p>
          </div>
        </div>
      </a>`;
    listingContainer.insertAdjacentHTML("beforeend", html);
  });
}

// when user types
searchInput.addEventListener("input", () => {
  clearTimeout(window.searchTimeout);
  window.searchTimeout = setTimeout(performSearch, 300);
});

// when user clicks search
searchBtn.addEventListener("click", performSearch);
</script>







