<% layout("/layouts/boilerplate.ejs") %> 

<style>
#filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 1rem;
}

.filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    font-size: 0.8rem;
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
}

.filter.active {
    opacity: 1;
    border-bottom: 2px solid black;
}

.tax-info{
  display: none;
}

.tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    width: 300px;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* ===== MEDIA QUERIES ===== */

/* Small screens (mobile) */
@media (max-width: 576px) {
    #filters {
        flex-direction: column;
        align-items: flex-start;
    }

    .filter {
        margin-right: 1rem;
        font-size: 0.75rem;
    }

    .tax-toggle {
        width: 100%;
        margin-left: 0;
        margin-top: 1rem;
        justify-content: flex-start;
        padding: 0.5rem 1rem;
    }
}

/* Medium screens (tablet) */
@media (min-width: 577px) and (max-width: 992px) {
    #filters {
        flex-wrap: wrap;
    }

    .filter {
        margin-right: 1.5rem;
        font-size: 0.78rem;
    }

    .tax-toggle {
        width: 250px;
        margin-left: 1rem;
        margin-top: 1rem;
    }
}

/* Optional: Adjust listing card spacing on small screens */
@media (max-width: 768px) {
    .listing-card-wrapper {
        margin-bottom: 1rem;
    }
}


</style>

